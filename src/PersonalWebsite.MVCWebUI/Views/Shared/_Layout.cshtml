<!DOCTYPE html>
<html lang="tr">
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta name=”robots” content="index, follow">
    @await RenderSectionAsync("Meta", required: false)
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/fonts.min.css" />
    <link rel="stylesheet" href="~/css/layout.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <nav class="p-0 bg-dark navbar navbar-dark navbar-expand-lg">
        <div class="container-fluid p-3">
            <a href="/" class="navbar-brand" id="brand">#muhammednlfrk</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/" title="Hakkımda" aria-label="Hakkımda">Hakkımda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/blog" title="Yazılarım" aria-label="Yazılarım">Yazılarım</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://github.com/muhammednlfrk" target="_blank" title="GitHub" aria-label="GitHub">GitHub</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://www.linkedin.com/in/muhammed-nilifirka" target="_blank" title="LinkedIn" aria-label="LinkedIn">LinkedIn</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <footer class="bg-dark text-light py-3">
        <div class="container text-center">
            <div class="d-flex justify-content-center mb-3">
                <a href="https://www.linkedin.com/in/muhammed-nilifirka" class="link-light icon-link icon-link-hover p-2" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0);" target="_blank" title="LinkedIn" aria-label="LinkedIn">
                    <i class="bi bi-linkedin"></i>
                </a>
                <a href="https://github.com/muhammednlfrk" class="link-light icon-link icon-link-hover p-2" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0);" target="_blank" title="GitHub" aria-label="GitHub">
                    <i class="bi bi-github"></i>
                </a>
                <a href="https://x.com/muhammednlfrk" class="link-light icon-link icon-link-hover p-2" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0);" target="_blank" title="X" aria-label="X">
                    <i class="bi bi-twitter-x"></i>
                </a>
            </div>
            <p class="mb-0 fs-6 fst-italic fw-light">
                Telif hakkı &copy; 2024 Muhammed Nilifırka. Tüm hakları saklıdır.
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
